<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MadLibsTemplates">


    <EditText
        android:id="@+id/Verb2"   
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Place"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Submit"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Verb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:hint="Verb1"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Verb2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Adjective2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:hint="Adjective2"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Verb1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Adjective1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:hint="Adjective1"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Adjective2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="4dp"
        android:text="Input the following prompts"
        app:layout_constraintBottom_toTopOf="@+id/Noun1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Noun1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:hint="Noun1"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Noun2"
        app:layout_constraintStart_toStartOf="parent" />



    <EditText
        android:id="@+id/Noun2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:hint="Plural Noun"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/Adjective1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="376dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/display"
        android:layout_width="253dp"
        android:layout_height="283dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>